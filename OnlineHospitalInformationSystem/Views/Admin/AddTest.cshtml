@model OnlineHospitalInformationSystem.Models.TestAddModel

@{
    ViewBag.Title = "AddTest";
}

<h2>AddTest</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Test</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Test, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Test)
                @Html.ValidationMessageFor(model => model.Test)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HospitalName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HospitalName, (SelectList)ViewBag.hospitals, "Select Hospital")

                @Html.ValidationMessageFor(model => model.HospitalName)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Coast, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Coast)

                @Html.ValidationMessageFor(model => model.Coast)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DisplayAdminHomePage")
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
@using OnlineHospitalInformationSystem.Models
@model IEnumerable<DoctorDetailsViewModel>

<div>
    <div style="text-align: center"> <h3>@ViewBag.currentHospital</h3>@ViewBag.currentHospitalAdddress</div> 
    
    <br/>
    <span style="font-family: Arial;font-size: 1.2em;font-weight: bold ">@ViewBag.cur</span> (@ViewBag.specilization) 
    @foreach (var item in (IEnumerable<DoctorDetailsViewModel>)ViewBag.currentDoctorDetails)
    {
     
        <label>,</label>
       
        <span style="font-weight: bold">@Html.DisplayFor(modelItem => item.Degree)</span>
        
        <label>(</label>  @Html.DisplayFor(modelItem => item.Instution)<label>)</label>
       


   
    }
</div>
<span style="font-weight: bold;">Visit :</span><span>@ViewBag.visit  </span>&nbsp;&nbsp; <span ><b>Sex :</b> @ViewBag.currentDoctorSex </span>&nbsp;
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th colspan="3" style="text-align: center;background: green;color: white">Availablity</th>
        </tr>
        <tr>

            <th>
                Day
            </th>
            <th>
                Time
            </th>

    



        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in (IEnumerable<DateTimeInfo>)ViewBag.doctorAvailablityInfo)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>

       
            </tr>
        }
    </tbody>


</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

   
}